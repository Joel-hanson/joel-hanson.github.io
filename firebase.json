{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "./build/es6-bundled",
    "rewrites": [
      {
        "source": "!/__/**",
        "destination": "/index.html"
      },
      {
        "source": "**/!(*.js|*.html|*.css|*.json|*.svg|*.png|*.jpg|*.jpeg|*.pdf)",
        "destination": "/index.html"
      }
    ]
  }
}